<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="receita" namespace="/receita" extends="default-gsgaadmin">
		<action name="conversoes" method="iniciarConvercao" class="receitaAction">
			<result>/WEB-INF/pages/receita/conversao/conversao.jsp</result>
		</action>

		<action name="importar-arquivo" method="carregarArquivo" class="receitaAction">
			<interceptor-ref name="exception" />
			<interceptor-ref name="i18n" />
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">text/plain</param>
			</interceptor-ref>
			<interceptor-ref name="params">
				<param name="excludeParams">dojo\..*,^struts\..*</param>
			</interceptor-ref>
			<interceptor-ref name="validation">
				<param name="excludeMethods">input,back,cancel,browse</param>
			</interceptor-ref>
			<interceptor-ref name="workflow">
				<param name="excludeMethods">input,back,cancel,browse</param>
			</interceptor-ref>
			<result>/WEB-INF/pages/receita/conversao/conversao.jsp</result>
		</action>
		<action name="download-arquivo" method="download" class="receitaAction"/>
	</package>
</struts>